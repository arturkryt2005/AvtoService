<div class="allcont">
    <div class="contact-form">
        <h2>Связаться с нами</h2>
        <form>
            <label for="name">Имя</label>
            <input type="text" id="name" placeholder="Введите Имя" required>

            <label for="email">Почта</label>
            <input type="email" id="email" placeholder="Введите эю почту" required>

            <label for="phone">Телефон</label>
            <input type="tel" id="phone" placeholder="+7 (777) 777-77-77" required>

            <label for="subject">Тема</label>
            <input type="text" id="subject" placeholder="Тема" required>

            <label for="message">Доп. Информация</label>
            <textarea id="message" rows="4" required></textarea>

            <button type="submit">ОТПРАВИТЬ</button>
        </form>
    </div>
</div>
